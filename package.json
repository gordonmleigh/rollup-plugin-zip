{
  "name": "@gordonmleigh/rollup-plugin-zip",
  "version": "0.1.3",
  "type": "module",
  "author": {
    "name": "Gordon Leigh"
  },
  "engines": {
    "node": ">=18"
  },
  "description": "A Rollup plugin to bundle files into a zip",
  "keywords": [
    "rollup-plugin",
    "rollup",
    "zip"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gordonmleigh/rollup-plugin-zip"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run lint",
    "clean": "rm -rf lib/ *.tsbuildinfo",
    "compile": "tsc",
    "lint": "eslint src/ --ext=ts"
  },
  "exports": {
    ".": {
      "types": "./lib/plugin.d.ts",
      "default": "./lib/plugin.js"
    }
  },
  "files": [
    "lib/"
  ],
  "peerDependencies": {
    "rollup": "^4"
  },
  "devDependencies": {
    "@propulsionworks/eslint-config": "^0.3.3",
    "@types/archiver": "^6.0.2",
    "@types/node": "^20.10.4",
    "eslint": "^9",
    "prettier": "^3.1.1",
    "rollup": "^4.9.1",
    "typescript": "~5.5"
  },
  "dependencies": {
    "zip24": "^0.1.6"
  }
}
